{
  "name": "clean-arch-node",
  "version": "1.0.0",
  "description": "Respository focused on the clean arch course in nodejs by Rodrigo Manguinho",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent --noStackTrace --passWithNoTests --colors",
    "test:unit": "npm test -- --watch",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "lint-staged": {
    "*.js": [
      "standard --fix",
      "npm run test:staged"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "keywords": [],
  "author": "Willian Silva",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "standard": "^17.1.0"
  }
}
